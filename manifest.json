{
    "manifest_version": 3,
    "name": "Sparxmaths Solver",
    "version": "1.1",
    "description": "Stores bookwork codes and has colour themes",

    "host_permissions": [
      "*://weydonschool.sparxmaths.uk/*",
      "https://auth.sparxmaths.uk/*"
    ],
  
    "icons": {
      "128": "logo.png"
    },

    "action": {
      "default_icon": {
        "128": "logo.png"
      },
      "default_title": "Sparx Extension",
      "default_popup": "popup.html"
    },
    
    "permissions": [
      "activeTab",
      "storage",
      "downloads"
    ],

    "content_scripts": [
      {
        "matches": ["*://weydonschool.sparxmaths.uk/*", "https://auth.sparxmaths.uk/*"],
        "js": ["contentScript.js"]
      }
    ],

    "web_accessible_resources": [{
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }],

    "content_security_policy": "script-src 'self' static.sparxmaths.uk https://raw.githubusercontent.com/ https://cdn.jsdelivr.net/; object-src 'self'"
}
